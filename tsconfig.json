{
   "compilerOptions": {
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "target": "ESNext",
      "lib": [
         "ESNext"
      ],
      "module": "CommonJS",
      "rootDir": ".",
      "baseUrl": ".",
      "resolveJsonModule": true,
      "allowJs": true,
      "outDir": "./build",
      "removeComments": true,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "paths": {
         "@/*": [
            "*"
         ]
      }
   },
   "include": [
      "src"
   ]
}